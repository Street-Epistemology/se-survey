{
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.jsonc", ".eslintrc", "tsconfig*.json"],
      "options": {
        "trailingComma": "none"
      }
    }
  ],
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react$",
    "<THIRD_PARTY_MODULES>",
    "",
    "^(img|locales|metaculus|ts)(/.*)$",
    "^(?!.*[.]css$)[./].*$",
    "",
    ".css$"
  ]
}
